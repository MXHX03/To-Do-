<LoginScreen>
    Circle:
        md_bg_color: app.colors.blue
        size: "200dp", "200dp"
        pos_hint: {"center_x": .99, "center_y": .75}

    Circle:
        md_bg_color: app.colors.dark
        size:"450dp", "400dp"
        pos_hint: {"center_x": .42,"center_y":.92}
        radius: [380]

    Circle:
        md_bg_color: app.colors.yellow
        size:"310dp", "170dp"
        pos_hint: {"center_x": .1,"center_y":1}
