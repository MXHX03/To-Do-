#: import gch kivy.utils.get_color_from_hex

#: set main_color gch("071B63")

<SignupScreen>
    FitImage:
        source:"bg_img.jpg"
    MDLabel:
        text:"MY NOTES"
        font_size:"20sp"
        font_name:"Roboto-Bold"
        theme_text_color:"Custom"
        text_color: main_color
        pos_hint: {"center_y": .8}
        halign: "center"

    MDTextField:
        id: email_field
        hint_text: "Email"
        hint_text_color_normal: main_color
        hint_text_color_focus: main_color
        text_color_normal: main_color
        text_color_focus: main_color
        size_hint_x: .7
        pos_hint: {"center_x": .5, "center_y": .6}
        line_color_normal: main_color
        line_color_focus: main_color
        mode: "fill"
    MDIconButton:
        icon: "email"
        pos_hint: {"center_x": .82, "center_y": .6}
        icon_size: "18sp"

    MDTextField:
        id: password_field
        hint_text: "Password"
        hint_text_color_normal: main_color
        hint_text_color_focus: main_color
        text_color_normal: main_color
        text_color_focus: main_color
        size_hint_x: .7
        pos_hint: {"center_x": .5, "center_y": .5}
        line_color_normal: main_color
        line_color_focus: main_color
        mode: "fill"
        password: True
    MDIconButton:
        icon:"eye"
        pos_hint: {"center_x": .82, "center_y": .5}
        icon_size: "18sp"
        on_press:
            password_field.password = False if password_field.password == True else True
            self.icon = "eye-off" if self.icon == "eye" else "eye"

    MDFillRoundFlatButton:
        text:"Sign Up"
        hint_text_color: 'white'
        pos_hint: {"center_x": .5, "center_y": .3}
        font_style: "Button"
        md_bg_color: main_color
        size_hint_x: .5
        on_press: root.signup()
    MDFillRoundFlatButton:
        text:"Login Instead?"
        hint_text_color: 'white'
        pos_hint: {"center_x": .5, "center_y": .2}
        font_style: "Button"
        md_bg_color: main_color
        size_hint_x: .5
        on_press: root.manager.current = "login_screen"